<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.store.RegisterStoreActivity">

    <include
        layout="@layout/header_other"
        android:id="@+id/toolbar_register_store"/>

    <TextView
        android:id="@+id/txt_status"
        android:text="@string/status"
        android:gravity="center"
        android:layout_below="@id/toolbar_register_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_below="@id/txt_status"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_information"
            android:textAllCaps="false"
            android:text="@string/informasi"
            android:background="@color/colorWhite"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_lanjutan"
            android:text="@string/lanjutan"
            android:background="@color/colorWhite"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:layout_below="@id/ll_btn"
        android:id="@+id/frameLayout_register_store"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>